{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "plugins": ["prettier"],
    "parser": "babel-eslint",
    "extends": [
        "eslint:recommended",
        "prettier"
    ],
    "settings": {
        "import/resolver": {
            "node": {
                "paths": ["./src"],
                "extensions": [".js"]
            }
        }
    },
    "rules": {
        "prettier/prettier": "error",
        "linebreak-style": [
            "error",
            "windows"
        ],
        "indent": [
            "error",
            4,
            {
                "outerIIFEBody": 0
            }
        ],
        "no-unused-vars": "warn",
        "no-console": "off"
    }
}
